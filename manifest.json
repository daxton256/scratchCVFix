{
    "name": "Scratch Cloud Variable Fixer",
    "description": "Fixes the long lasting downtimes of the Scratch cloud variable servers.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "status.html",
      "default_icon": "cloud.png"
    }, 
    "content_scripts": [
        {
            "js": ["injector.js"],
            "matches": [
                "https://scratch.mit.edu/projects/*"
            ]
        }
    ]
  }